      <div class="flex flex-col w-full mt-20">
        <div class="ml-5 sm:ml-10 lg:ml-14">
          <p class="text-xs lg:text-sm">Your Profile</p>
        <p class="mt-1 text-darkNavy text-xl md:text-3xl lg:text-4xl font-bold">Current Profile Details</p>
        </div> 
        
        <div class="bg-white mt-10 border-2 border-darkNavy border-opacity-50 p-4 w-[90%] mx-auto rounded-xl">
          <div class="flex justify-between items-center mt-2 mb-4"><p class="text-darkNavy text-sm font-bold">Basic Information</p> <img id="basicInfoEditBtn" class="w-6 cursor-pointer hover:rotate-12 duration-500" src="../Images/edit.png" alt="Edit Icon"></div>
          <div class="p-2 bg-darkGray border-t border-b border-darkNavy border-opacity-50">
            <div class="w-[16rem] text-sm sm:text-base sm:w-[20rem] flex justify-between">
              <p>Full Name: </p>
              <p class="font-bold"><%= user.name %></p>
            </div>
          </div>
          <div class="p-2 bg-white border-b border-darkNavy border-opacity-50">
            <div class="w-[16rem] text-sm sm:text-base sm:w-[20rem] flex justify-between">
            <p>Email Address: </p>
            <p class="font-bold"><%= user.email %></p>
            </div>
          </div>
          <div class="p-2 bg-darkGray border-b border-darkNavy border-opacity-50">
            <div class="w-[16rem] text-sm sm:text-base sm:w-[20rem] flex justify-between">
            <p>Username: </p>
            <p class="font-bold"><%= user.username%></p>
            </div>
          </div>
        </div>
        <form id="basicInfoForm" class="hidden w-[90%] mx-auto" action="/user/profile?_method=patch" method="post">
          <p> <input class="w-full sm:w-96 px-8 py-3 mt-4 placeholder:text-sm rounded-xl border-2 border-brightBlue" type="text" name="name" id="name"
              placeholder="Update Your Name" /></p>

              <p> <input class="w-full sm:w-96 px-8 py-3 mt-4 placeholder:text-sm rounded-xl border-2 border-brightBlue" type="text" name="email"
                id="email" placeholder="Update Your Email" /></p>

          <p> <input class="w-full sm:w-96 px-8 py-3 mt-4 placeholder:text-sm rounded-xl border-2 border-brightBlue" type="text" name="username" id="username"
              placeholder="Update Your Username" /></p>

          <p><input class="w-full sm:w-96 px-8 py-3 mt-4 placeholder:text-sm rounded-xl border-2 border-brightBlue" type="text" name="password"
              id="password" placeholder="Update Your Password" /></p>
            <div>
          <button type="submit" class="w-full sm:w-96 px-10 mt-4 py-3 duration-700 text-lightGray rounded-xl border-2 border-brightBlue bg-brightBlue hover:bg-lightGray1 hover:text-darkBlue">
            Update
          </button></div>
        </form>
        <div class="mt-10 border-2 border-darkNavy border-opacity-50 p-4 w-[90%] mx-auto rounded-xl">
        <div class="flex justify-between items-center mt-2 mb-4"><p class="text-darkNavy text-sm font-bold">Other Information</p> <img id="otherInfoEditBtn" class="w-6 cursor-pointer hover:rotate-12 duration-500" src="../Images/edit.png" alt="Edit Icon"></div>
        <div class="p-2 bg-white border-t border-b border-darkNavy border-opacity-50">
          <div class="w-[16rem] text-sm sm:text-base sm:w-[20rem] flex justify-between">
            <p>Country: </p>
            <% if (user.country.length === 0) { %>
              <p class="font-bold">Not Provided</p>
            <% } else {%>
           <p class="font-bold"><%= user.country %></p> 
            <% } %>
          </div>
        </div>
        <div class="p-2 bg-darkGray border-b border-darkNavy border-opacity-50">
          <div class="w-[16rem] text-sm sm:text-base sm:w-[20rem] flex justify-between">
            <p>City: </p>
            <% if (user.city.length === 0) { %>
              <p class="font-bold">Not Provided</p>
            <% } else {%>
           <p class="font-bold"><%= user.city %></p> 
            <% } %>
          </div>
        </div>
        <div class="p-2 bg-white border-b border-darkNavy border-opacity-50">
