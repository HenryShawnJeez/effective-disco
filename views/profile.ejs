            <% if (user.postalcode) { %>
             <p class="font-bold"><%= user.postalcode %></p> 
            <% } else {%>
              <p class="font-bold">Not Provided</p>
            <% } %>
          </div>
        </div>
        <div class="p-2 bg-darkGray border-b border-darkNavy border-opacity-50">
          <div class="w-[16rem] text-sm sm:text-base sm:w-[20rem] flex justify-between">
