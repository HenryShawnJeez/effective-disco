<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="../Images/logo.ico" type="image/x-ico" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <!-- Bootstrap Icon -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
    <!-- Stylesheet -->
    <link rel="stylesheet" href="../CSS/main.css" />
    <!-- Custom JavaScript -->
    <script defer src="../JS/dashboard.js"></script>
    <!-- Jivo Chat -->
    <script src="//code.jivosite.com/widget/DzC9jELjbC" async></script>
  </head>

  <body class="main bg-darkGray">
    <%- include ("partials/sidebar"); -%> <% if(status ==='success' ){ %>
    <div class="flex w-full items-center justify-center">
      <div
        id="overlay"
        class="overlay fixed inset-0 z-20 bg-black bg-opacity-70"
      ></div>

      <div
        id="successPopup"
        class="fixed top-[30%] z-30 w-[20rem] rounded bg-white p-6 shadow-lg"
      >
        <span
          id="closePopupBtn"
          onclick="closePopupBtnClick()"
          class="absolute top-2 right-2 cursor-pointer text-2xl text-gray-500"
          >&times;</span
        >
        <img class="mx-auto" src="../Images/correct.svg" alt="Correct Icon" />
        <h2 class="mt-2 text-center text-2xl font-semibold text-green-500">
          Success!
        </h2>
        <p class="mt-8 text-center text-sm capitalize text-gray-800">
          Your Deposit was successfully processed and is currently under review.
        </p>
      </div>
    </div>
    <% } else if (status==='fail' ){%>
    <div class="flex w-full items-center justify-center">
      <div
        id="failureOverlay"
        class="overlay fixed inset-0 z-20 bg-black bg-opacity-70"
      ></div>

      <div
        id="failurePopup"
        class="fixed top-[30%] z-30 w-[20rem] rounded bg-white p-6 shadow-lg"
      >
        <span
          onclick="failureClosePopupBtnClick()"
          class="absolute top-2 right-2 cursor-pointer text-2xl text-gray-500"
          >&times;</span
        >
        <img class="mx-auto w-20" src="../Images/wrong.png" alt="Wrong Icon" />
        <h2 class="mt-2 text-center text-2xl font-semibold text-red-500">
          Failure!
        </h2>
        <p class="mt-8 text-center text-sm capitalize text-gray-800">
          Your deposit failed please try again later.
        </p>
      </div>
    </div>
    <% }%>
    <form action="/user/deposit" method="post">
      <div class="flex flex-col items-center justify-center">
        <div class="mt-32 flex flex-row items-center justify-center space-x-4">
          <div class="h-4 w-4 rounded-full bg-brightBlue"></div>
          <div class="h-4 w-4 rounded-full bg-gray-600"></div>
        </div>
        <div class="mt-10 text-center text-brightBlue">
          <h1 class="text-2xl font-bold md:text-4xl">Make A Deposit</h1>
          <h4 class="mt-10 text-sm text-darkBlue md:text-base">
            Choose The Type Of Deposit
          </h4>
        </div>
        <div
          class="custom-select mt-2 w-72 rounded-xl border-2 border-brightBlue md:w-96"
        >
          <select name="medium" class="rounded-xl">
            <option>Choose The Wallet</option>
            <option value="Bitcoin">Bitcoin</option>
            <option value="Ethereum">Ethereum</option>
            <option value="Bitcoin Cash">Bitcoin Cash</option>
            <option value="Cardano">Cardano (ADA)</option>
            <option value="Solana">Solana</option>
            <option value="Litecoin">Litecoin</option>
            <option value="Usdt">USDT</option>
            <option value="usRazor">US Razor Gold</option>
            <option value="ukSteam">UK Steam Card</option>
          </select>
        </div>
        <div class="mt-10">
          <h4 class="text-center text-sm text-darkBlue md:text-base">
            Amount To Deposit
          </h4>
          <input
            class="mt-2 w-72 rounded-xl border-2 border-brightBlue px-8 py-3 placeholder:text-center placeholder:text-sm md:w-96"
            type="number"
            name="amount"
            id="amount"
            placeholder="Enter The Amount "
          />
        </div>
        <button
          type="submit"
          class="mt-10 w-72 rounded-xl border-2 border-brightBlue bg-brightBlue px-10 py-3 text-lightGray duration-700 hover:bg-lightGray1 hover:text-darkBlue md:w-96"
        >
          Deposit
        </button>
      </div>
    </form>
    <div
      class="mx-auto mt-10 flex w-[90%] flex-col rounded-xl border border-darkNavy p-2 sm:w-[80%]"
    >
      <p class="mb-2 text-sm font-bold sm:text-base">Deposit History</p>

      <% deposits.forEach(deposit => { %>
      <div
        id="deposit"
        class="mt-2 flex flex-row items-center justify-between rounded-xl border border-red-600 p-2"
      >
        <div class="flex flex-row items-center">
          <div
            class="flex items-center justify-center rounded-[50%] bg-red-600 bg-opacity-40 p-2 sm:p-4"
          >
            <img
              class="h-5 w-5 sm:h-6 sm:w-6"
              src="../Images/depositArrow.png"
              alt="Deposit Icon"
            />
          </div>
          <div>
            <p class="ml-2 text-xs font-bold sm:text-base">
              Deposit Via <%= deposit.medium %>
            </p>
            <div class="ml-2 flex flex-row items-center space-x-2">
              <p class="text-xs font-bold sm:text-base">
                <%= deposit.createdAt.toLocaleDateString() %>
              </p>
              <p class="text-xs font-bold capitalize text-green-600 sm:text-sm">
                <%= deposit.status %>
              </p>
            </div>
          </div>
        </div>
        <div>
          <h1 class="text-sm font-bold text-red-600 sm:text-xl">
            +Â£<%= deposit.amount.toLocaleString() %>
          </h1>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include ("partials/script"); -%>
    <script src="../JS/deposit.js"></script>
    <!-- For the popups -->
    <script>
      const successPopup = document.getElementById("successPopup");
      const overlay = document.getElementById("overlay");

      const closePopupBtnClick = () => {
        successPopup.classList.add("hidden");
        overlay.classList.add("hidden");
      };

      const failurePopup = document.getElementById("failurePopup");
      const failureOverlay = document.getElementById("failureOverlay");

      const failureClosePopupBtnClick = () => {
        failurePopup.classList.add("hidden");
        failureOverlay.classList.add("hidden");
      };
    </script>
  </body>
</html>
