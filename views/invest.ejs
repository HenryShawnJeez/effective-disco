<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invest</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="../Images/logo.ico" type="image/x-ico" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <!-- Bootstrap Icon -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
    <!-- Stylesheet -->
    <link rel="stylesheet" href="../CSS/main.css" />
    <!-- Custom JavaScript -->
    <script defer src="../JS/dashboard.js"></script>
    <script defer src="../JS/invest.js"></script>
    <!-- Jivo Chat -->
    <script src="//code.jivosite.com/widget/DzC9jELjbC" async></script>
  </head>

  <body class="bg-darkGray main">
    <%- include ("partials/sidebar"); -%>
    <section>
      <% if(status ==='success' ){ %>
      <div
        id="overlay"
        class="overlay fixed inset-0 bg-black bg-opacity-70 z-20"
      ></div>

      <div
        id="successPopup"
        class="fixed w-[20rem] top-[30%] left-[3%] sm:left-[15%] md:left-[40%] lg:left-[50%] bg-white p-6 rounded shadow-lg z-30"
      >
        <span
          id="closePopupBtn"
          onclick="closePopupBtnClick()"
          class="absolute top-2 right-2 text-gray-500 cursor-pointer text-2xl"
          >&times;</span
        >
        <img class="mx-auto" src="../Images/correct.svg" alt="Correct Icon" />
        <h2 class="text-green-500 text-2xl font-semibold mt-2 text-center">
          Success!
        </h2>
        <p class="text-gray-800 capitalize text-sm mt-8 text-center">
          Your investment was successful.
        </p>
      </div>
      <%} else if (status ==='fail' ){%>
      <div
        id="failureOverlay"
        class="overlay fixed inset-0 bg-black bg-opacity-70 z-20"
      ></div>

      <div
        id="failurePopup"
        class="fixed w-[20rem] top-[30%] left-[3%] sm:left-[15%] md:left-[40%] lg:left-[50%] bg-white p-6 rounded shadow-lg z-30"
      >
        <span
          onclick="failureClosePopupBtnClick()"
          class="absolute top-2 right-2 text-gray-500 cursor-pointer text-2xl"
          >&times;</span
        >
        <img class="mx-auto w-20" src="../Images/wrong.png" alt="Wrong Icon" />
        <h2 class="text-red-500 text-2xl font-semibold mt-2 text-center">
          Failure!
        </h2>
        <p class="text-gray-800 capitalize text-sm mt-8 text-center">
          Your investment failed please try again later.
        </p>
      </div>

      <% }%>
      <div class="flex flex-col justify-center items-center">
        <div class="text-center text-brightBlue mt-32">
          <h1 class="text-2xl font-bold md:text-4xl">Make An Investment</h1>
          <h4 class="text-sm mt-10 text-darkBlue md:text-base">
            Select Your Plan.
          </h4>
        </div>

        <form
          id="form"
          action="/user/invest"
          method="post"
          class="flex flex-col items-center justify-center"
        >
          <div
            class="custom-select rounded-xl mt-2 w-72 md:w-96 border-2 border-brightBlue"
          >
            <select name="plan">
              <option value="">Select Your Plan</option>
              <option value="cashFlip">Cash Flip Plan</option>
              <option value="basic">Basic Plan</option>
              <option value="standard">Standard Plan</option>
              <option value="essential">Essential Plan</option>
              <option value="proEssential">Pro Essential Plan</option>
              <option value="premium">Premium Plan</option>
            </select>
          </div>
          <div class="mt-10">
            <h4 class="text-sm text-center text-darkBlue md:text-base">
              Amount To Invest.
            </h4>
            <input
              class="px-8 py-3 rounded-xl mt-2 placeholder:text-center placeholder:text-sm w-72 md:w-96 border-2 border-brightBlue"
              type="number"
              name="amount"
              id="amount"
              placeholder="Enter The Amount Here"
            />
          </div>
          <button
            type="submit"
            class="w-72 md:w-96 px-10 py-3 rounded-xl mt-10 duration-700 border-2 border-brightBlue hover:bg-lightGray1 hover:text-darkBlue bg-brightBlue text-lightGray"
          >
            Invest
          </button>
        </form>
      </div>
    </section>
    <% if(investments.length> 0){ %>
    <section class="investments text-center">
      <p class="mt-10">Active Investments</p>
      <table
        class="mx-auto mt-12 mb-1 border-collapse w-3/4 text-xs bg-white shadow-xl md:text-sm md:mx-auto"
      >
        <thead class="">
          <tr class="text-left h-16 border-b-2 border-cyan-500">
            <th
              class="w-1/3 border border-slate-300 dark:border-slate-600 font-semibold text-center"
            >
              Amount
            </th>
            <th
              class="w-1/3 border border-slate-300 dark:border-slate-600 font-semibold text-center"
            >
              Invested At
            </th>
            <th
              class="w-1/3 border border-slate-300 dark:border-slate-600 font-semibold text-center"
            >
              Expires At
            </th>
          </tr>
        </thead>
        <tbody>
          <% investments.forEach(investment=> {%>
          <tr class="border-b-1 h-10">
            <td class="border text-center">Â£<%= investment.amount %></td>
            <td class="border text-center capitalize">
              <%= investment.createdAt.toLocaleDateString() %>
            </td>
            <td class="border text-center capitalize">
              <%= investment.expiresAt.toLocaleDateString() %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
    <% } %> <%- include ("partials/script"); -%>
    <script src="../JS/deposit.js"></script>
    <!-- For the popups -->
    <script>
      const successPopup = document.getElementById("successPopup");
      const overlay = document.getElementById("overlay");

      const closePopupBtnClick = () => {
        successPopup.classList.add("hidden");
        overlay.classList.add("hidden");
      };

      const failurePopup = document.getElementById("failurePopup");
      const failureOverlay = document.getElementById("failureOverlay");

      const failureClosePopupBtnClick = () => {
        failurePopup.classList.add("hidden");
        failureOverlay.classList.add("hidden");
      };
    </script>
  </body>
</html>
