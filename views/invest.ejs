<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invest</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="../Images/logo.ico" type="image/x-ico" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <!-- Bootstrap Icon -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
    <!-- Stylesheet -->
    <link rel="stylesheet" href="../CSS/main.css" />
    <!-- Custom JavaScript -->
    <script defer src="../JS/dashboard.js"></script>
    <script defer src="../JS/invest.js"></script>
    <!-- Jivo Chat -->
    <script src="//code.jivosite.com/widget/DzC9jELjbC" async></script>
  </head>

  <body class="main bg-darkGray">
    <%- include ("partials/sidebar"); -%>
    <section>
      <% if(status ==='success' ){ %>
      <div class="flex w-full items-center justify-center">
        <div
          id="overlay"
          class="overlay fixed inset-0 z-20 bg-black bg-opacity-70"
        ></div>

        <div
          id="successPopup"
          class="fixed top-[30%] z-30 w-[20rem] rounded bg-white p-6 shadow-lg"
        >
          <span
            id="closePopupBtn"
            onclick="closePopupBtnClick()"
            class="absolute top-2 right-2 cursor-pointer text-2xl text-gray-500"
            >&times;</span
          >
          <img class="mx-auto" src="../Images/correct.svg" alt="Correct Icon" />
          <h2 class="mt-2 text-center text-2xl font-semibold text-green-500">
            Success!
          </h2>
          <p class="mt-8 text-center text-sm capitalize text-gray-800">
            Your investment was successful.
          </p>
        </div>
      </div>
      <%} else if (status ==='fail' ){%>
      <div class="flex w-full items-center justify-center">
        <div
          id="failureOverlay"
          class="overlay fixed inset-0 z-20 bg-black bg-opacity-70"
        ></div>

        <div
          id="failurePopup"
          class="fixed top-[30%] z-30 w-[20rem] rounded bg-white p-6 shadow-lg"
        >
          <span
            onclick="failureClosePopupBtnClick()"
            class="absolute top-2 right-2 cursor-pointer text-2xl text-gray-500"
            >&times;</span
          >
          <img
            class="mx-auto w-20"
            src="../Images/wrong.png"
            alt="Wrong Icon"
          />
          <h2 class="mt-2 text-center text-2xl font-semibold text-red-500">
            Failure!
          </h2>
          <p class="mt-8 text-center text-sm capitalize text-gray-800">
            Your investment failed please try again later.
          </p>
        </div>
      </div>
      <% }%>
      <div class="flex flex-col items-center justify-center">
        <div class="mt-32 text-center text-brightBlue">
          <h1 class="text-2xl font-bold md:text-4xl">Make An Investment</h1>
          <h4 class="mt-10 text-sm text-darkBlue md:text-base">
            Select Your Plan.
          </h4>
        </div>

        <form
          id="form"
          action="/user/invest"
          method="post"
          class="flex flex-col items-center justify-center"
        >
          <div
            class="custom-select mt-2 w-72 rounded-xl border-2 border-brightBlue md:w-96"
          >
            <select name="plan">
              <option value="">Select Your Plan</option>
              <option value="cashFlip">Cash Flip Plan</option>
              <option value="basic">Basic Plan</option>
              <option value="standard">Standard Plan</option>
              <option value="essential">Essential Plan</option>
              <option value="proEssential">Pro Essential Plan</option>
              <option value="premium">Premium Plan</option>
            </select>
          </div>
          <div class="mt-10">
            <h4 class="text-center text-sm text-darkBlue md:text-base">
              Amount To Invest.
            </h4>
            <input
              class="mt-2 w-72 rounded-xl border-2 border-brightBlue px-8 py-3 placeholder:text-center placeholder:text-sm md:w-96"
              type="number"
              name="amount"
              id="amount"
              placeholder="Enter The Amount Here"
            />
          </div>
          <button
            type="submit"
            class="mt-10 w-72 rounded-xl border-2 border-brightBlue bg-brightBlue px-10 py-3 text-lightGray duration-700 hover:bg-lightGray1 hover:text-darkBlue md:w-96"
          >
            Invest
          </button>
        </form>
      </div>
    </section>
    <% if(investments.length> 0){ %>
    <section class="investments text-center">
      <p class="mt-10">Active Investments</p>
      <table
        class="mx-auto mt-12 mb-1 w-3/4 border-collapse bg-white text-xs shadow-xl md:mx-auto md:text-sm"
      >
        <thead class="">
          <tr class="h-16 border-b-2 border-cyan-500 text-left">
            <th
              class="w-1/3 border border-slate-300 text-center font-semibold dark:border-slate-600"
            >
              Amount
            </th>
            <th
              class="w-1/3 border border-slate-300 text-center font-semibold dark:border-slate-600"
            >
              Invested At
            </th>
            <th
              class="w-1/3 border border-slate-300 text-center font-semibold dark:border-slate-600"
            >
              Expires At
            </th>
          </tr>
        </thead>
        <tbody>
          <% investments.forEach(investment=> {%>
          <tr class="border-b-1 h-10">
            <td class="border text-center">Â£<%= investment.amount %></td>
            <td class="border text-center capitalize">
              <%= investment.createdAt.toLocaleDateString() %>
            </td>
            <td class="border text-center capitalize">
              <%= investment.expiresAt.toLocaleDateString() %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
    <% } %> <%- include ("partials/script"); -%>
    <script src="../JS/deposit.js"></script>
    <!-- For the popups -->
    <script>
      const successPopup = document.getElementById("successPopup");
      const overlay = document.getElementById("overlay");

      const closePopupBtnClick = () => {
        successPopup.classList.add("hidden");
        overlay.classList.add("hidden");
      };

      const failurePopup = document.getElementById("failurePopup");
      const failureOverlay = document.getElementById("failureOverlay");

      const failureClosePopupBtnClick = () => {
        failurePopup.classList.add("hidden");
        failureOverlay.classList.add("hidden");
      };
    </script>
  </body>
</html>
