<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Refer</title>
  <!-- Favicon -->
  <link rel="shortcut icon" href="../../Images/logo.ico" type="image/x-ico" />
  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@400;500;600;700;800&display=swap"
    rel="stylesheet" />
          <!-- Bootstrap Icon -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
  <!-- Stylesheet -->
  <link rel="stylesheet" href="../../CSS/main.css" />
  <link rel="stylesheet" href="../../CSS/toast.css" />
  <!-- Custom JavaScript -->
  <script defer src="../../JS/dashboard.js"></script>

</head>
    <body class="bg-darkGray main">
      <%- include("partials/adminSidebar"); -%>
        <section>
          <div class="flex flex-col justify-center items-center">
            <div class="mt-20 text-center">
              <h1 class="text-brightBlue font-bold text-2xl md:text-4xl">Referrals</h1>
              <h4 class="mt-2 text-darkBlue text-sm md:text-base">
                A Summary On Your Referrals And Their Details.
              </h4>
            </div>

            <table class="border-collapse bg-lightGray1 mx-auto mt-12 mb-1 rounded-md w-[90%] md:w-3/4 text-sm">
              <thead class="">
                <tr class="border-cyan-500 border-b-2 h-16 text-xs md:text-sm">
                  <th class="border-slate-300 dark:border-slate-600 border w-1/4 font-semibold text-center">
                    Username</th>
                  <th class="border-slate-300 dark:border-slate-600 border w-1/4 font-semibold text-center">
                    Account Balance</th>
                  <th class="border-slate-300 dark:border-slate-600 border w-1/4 font-semibold text-center">
                    Registration Date</th>
                  <th class="border-slate-300 dark:border-slate-600 border w-1/4 font-semibold text-center">
                    Referred By</th>
                </tr>
              </thead>
              <tbody>
                <% referredUsers.forEach(user=> {%>
                  <tr class="border border-b-1 h-10 text-center text-xs sm:text-sm md:text-base capitalize">
                    <td class="hover:text-red-600 hover:underline duration-500">
                      <a href="/user/admin/profile/<%= user._id %>">
                        <%= user.username || user.name%>
                      </a>
                    </td>
                    <td class="text-green-600"> 
                      Open
                    </td>
                    <td class="text-green-600">
                      <%= user.createdAt.toLocaleDateString() %>
                    </td>
                    <td class="hover:text-red-600 hover:underline duration-500">
                      <a href="/user/admin/profile/<%= user.referredBy._id %>">
                        <%= user.referredBy.username || user.referredBy.name %>
                      </a>
                    </td>
                  </tr>
                  <% }) %>

              </tbody>
            </table>
          </div>
        </section>
        <%- include ("partials/script"); -%>
    </body>

</html>