<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>
  <!-- Favicon -->
  <link rel="shortcut icon" href="../../Images/logo.ico" type="image/x-ico" />
  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@400;500;600;700;800&display=swap"
    rel="stylesheet" />
  <!-- Bootstrap Icon -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
  <!-- Stylesheet -->
  <link rel="stylesheet" href="../../CSS/main.css" />
  <link rel="stylesheet" href="../../CSS/toast.css" />
  <!-- Custom JavaScript -->
  <script defer src="../../JS/dashboard.js"></script>
</head>

<body class="bg-darkGray main">
  <%- include("partials/adminSidebar"); -%>
    <section>
      <% if(status ==='success' ){ %>
        <div class="flex w-full items-center justify-center">
          <div
            id="overlay"
            class="overlay fixed inset-0 z-20 bg-black bg-opacity-70"
          ></div>
          <div
            id="successPopup"
            class="fixed top-[30%] left-[3%] z-30 w-[20rem] rounded bg-white p-6 shadow-lg sm:left-[15%] md:left-[40%] lg:left-[50%]"
          >
            <span
              id="closePopupBtn"
              onclick="closePopupBtnClick()"
              class="absolute top-2 right-2 cursor-pointer text-2xl text-gray-500"
              >&times;</span
            >
            <img
              class="mx-auto"
              src="../../Images/correct.svg"
              alt="Correct Icon"
            />
            <h2 class="mt-2 text-center text-2xl font-semibold text-green-500">
              Success!
            </h2>
            <p class="mt-8 text-center text-sm capitalize text-gray-800">
              transaction submitted Successfully.
            </p>
          </div>
        </div>
        <% } else if (status ==='fail' ){%>
          <div class="flex w-full items-center justify-center">
            <div
              id="failureOverlay"
              class="overlay fixed inset-0 z-20 bg-black bg-opacity-70"
            ></div>
      
            <div
              id="failurePopup"
              class="fixed top-[30%] left-[3%] z-30 w-[20rem] rounded bg-white p-6 shadow-lg sm:left-[15%] md:left-[40%] lg:left-[50%]"
            >
              <span
                onclick="failureClosePopupBtnClick()"
                class="absolute top-2 right-2 cursor-pointer text-2xl text-gray-500"
                >&times;</span
              >
              <img
                class="mx-auto w-20"
                src="../../Images/wrong.png"
                alt="Wrong Icon"
              />
              <h2 class="mt-2 text-center text-2xl font-semibold text-red-500">
                Failure!
              </h2>
              <p class="mt-8 text-center text-sm capitalize text-gray-800">
                transaction failed !. Do ensure you entered the correct details
                if this persists please contact the developer.
              </p>
            </div>
          </div>
          <% }%>

            <div class="flex flex-col items-center justify-center">
              <div class="mt-20 text-center">
                <h1 class="text-2xl text-brightBlue font-bold md:text-4xl">Add Bonus</h1>
                <h4 class="text-sm mt-2 text-darkBlue md:text-base">
                  Add Bonus and Direct Deposit to Any User Of Your Choice. </h4>
              </div>
            </div>
            <form action="/user/admin/bonus" method="post">
              <div class="flex flex-col justify-center items-center">
                <div class="custom-select mt-20 w-80 md:w-96 border-2 border-brightBlue rounded-xl">
                  <select name="action">
                    <option value="">Select What You Want To Do</option>
                    <option value="bonus" selected>Add Bonus</option>
                    <option value="deposit">Direct Deposit</option>
                  </select>
                </div>
                <div class="mt-10">
                  <h4 class="text-sm text-center text-darkBlue md:text-base">
                    Enter The Email Address Of The User
                  </h4>
                  <input
                    class="px-8 py-3 mt-2 placeholder:text-center placeholder:text-sm w-80 border-2 border-brightBlue rounded-xl md:w-96"
                    type="email" name="email" id="userEmail" placeholder="Enter The Email Address" />
                </div>
                <div class="mt-10">
                  <h4 class="text-sm text-center text-darkBlue md:text-base">
                    Enter The Amount You Want To Add
                  </h4>
                  <input
                    class="px-8 py-3 mt-2 placeholder:text-center placeholder:text-sm w-80 border-2 border-brightBlue rounded-xl md:w-96"
                    type="number" name="amount" id="amount" placeholder="Enter The Amount" />
                </div>

                <div class="">
                  <button type="submit"
                    class="flex items-center justify-center w-80 md:w-96 py-3 mt-10 duration-700 text-lightGray bg-brightBlue border-2 border-brightBlue rounded-xl hover:bg-lightGray1 hover:text-darkBlue disabled:opacity-50 disabled:cursor-not-allowed load">
                    Add <ion-icon class="text-3xl ml-1" name="add-circle-outline"></ion-icon>
                  </button>
                </div>
              </div>
            </form>
    </section>
    <%- include ("partials/script"); -%>
    <!-- For the popups -->
    <script>
      const successPopup = document.getElementById("successPopup");
      const overlay = document.getElementById("overlay");

      const closePopupBtnClick = () => {
        successPopup.classList.add("hidden");
        overlay.classList.add("hidden");
      };

      const failurePopup = document.getElementById("failurePopup");
      const failureOverlay = document.getElementById("failureOverlay");

      const failureClosePopupBtnClick = () => {
        failurePopup.classList.add("hidden");
        failureOverlay.classList.add("hidden");
      };
    </script>
      <script src="../../JS/collapsible.js"></script>
      <script src="../../JS/deposit.js"></script>
</body>

</html>